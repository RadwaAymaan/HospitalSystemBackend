@using HMSWithLayers.Core.Result
@using HMSWithLayers.Application.DTOS
@inject HMSWithLayers.Application.Contracts.ISpecializationService specializationService
@inject NavigationManager navigationManager
@rendermode InteractiveServer
@page "/addSpecialization"


<PageTitle>AddSpecialization</PageTitle>

<h1>
    Add Specialization
</h1>
@if (errorMessage != null)
{
        <div class="alert alert-danger" role="alert">
        @errorMessage
        </div>
}
<EditForm Model="Model" OnValidSubmit="SubmitForm" FormName="RoomType">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <label>
            Name:
            <InputText @bind-Value="Model!.SpecializationName" />
        </label>
    </div>
    <ValidationMessage For="@(() => Model!.SpecializationName)" />

    <div>
        <button type="submit">Submit</button>
    </div>
</EditForm>


@code {
    [SupplyParameterFromForm]
    private SpecializationRequestDto? Model { get; set; } = new SpecializationRequestDto();
    private string errorMessage;

    /// <summary>
    /// Submits the form data for adding a new specialization.
    /// </summary>
    /// <returns>A task that represents the asynchronous operation.</returns>
    private async Task SubmitForm()
    {
        try
        {
            Result result = await specializationService.AddSpectializationAsync(Model);
            if (result.IsSuccess) {
                navigationManager.NavigateTo("/specialization");
            }
            else
            {
                errorMessage = "An error occurred";
            }
        }
        catch(Exception e)
        {
            errorMessage = "An error occurred "+e.Message;

        }
    }

}
